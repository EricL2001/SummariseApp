<div class="jumbotron" id="goal_header">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>My Goals</h2>
       
          <%= render 'form' %>
      </div>
    </div>
  </div>  
</div>

<div class="container">
<div class="wrap">

<% if @goals.presence %>
<div class="panel panel-default">
  <% @goals.sort_by{|t| - t.created_at.to_i}.each do |goal| %>
    <div class="panel-heading">
      
      <small class="pull-right"><em> <%= time_ago_in_words(goal.created_at) %> ago </em> </small>
    </div>
  
      <div class="panel-body">
          <%= goal.set_goal %>

          <% if user_signed_in? && current_user == goal.user %>
          <%= link_to edit_goal_path(goal), class: "btn btn-sm btn-default pull-right" do %>
          <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          <%= link_to goal, method: :met_goal, data: { confirm: 'Did you complete your goal?'}, class: "btn btn-sm btn-default pull-right" do %>
          <i class="glyphicon glyphicon-ok"></i>
            <% end %>
          
          <%= link_to goal, method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: "btn btn-sm btn-default pull-right" do %>
          <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        <% end %>
      </div>

    <% end %>
    </div>

    <% else %>
  
  <h3>There are no goals yet!</h3>
<% end %>

<%= link_to 'New Goal', new_goal_path %>

</div>
</div>

