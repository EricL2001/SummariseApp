<%if current_user %>
<h2>Trophies</h2>
	<div class="controls center">
		<div class="book-button">
		<%= link_to "Add Book", new_book_path, class: 'btn btn-info' %>
		</div>
	</div>
	<div class="frame">
		<% @books.each do |book| %>
			<div class="well">
				<h4><%= book.book_title %></h4>
				<h6><%= book.book_author %></h6>
				<!-- <h6><%= book.page_amount %> pages</h6> -->
				<h6><%= link_to 'Edit', edit_book_path(book) %> | <%= link_to 'Delete', book, method: :delete, data: {confirm: 'Are you sure?'} %></h6> 
			</div>
		<% end %>
	</div>

<% end %>


